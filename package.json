{
    "dependencies": {
        "@types/lodash": "^4.14.165",
        "@types/node": "^14.14.12",
        "ava": "^3.14.0",
        "c8": "^7.3.5",
        "fast-check": "^2.8.0",
        "husky": "^4.3.5",
        "lodash": "^4.17.20",
        "prettier": "^2.2.1",
        "source-map-support": "^0.5.19",
        "typescript": "^4.1.2"
    },
    "ava": {
        "ignoredByWatcher": [
            "test.ts"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx prettier --write *",
            "pre-push": "npx tsc && npx c8 ava && npx c8 check-coverage"
        }
    },
    "prettier": {
        "tabWidth": 4
    },
    "c8": {
        "extensions": [
            ".ts"
        ],
        "include": [
            "**"
        ],
        "exclude": [
            "**/node_modules/**"
        ],
        "reporter": [
            "text",
            "text-summary",
            "html"
        ],
        "require": [
            "source-map-support/register"
        ]
    }
}
